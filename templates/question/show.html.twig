{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ question.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Answers</h2>

    <ul>
        {% for answer in question.answers %}
        <li>
            {{ answer.description }}
            <a href="{{ path('response_edit', {id: answer.id}) }}" class="btn btn-primary">Editar</a>
        </li>
        {% else %}
            <li>No answers</li>
        {% endfor %}
    </ul>

    <a class="btn btn-primary" href="{{ path('question_index') }}">back to list</a>

    <a class="btn btn-secondary" href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    <a href="{{ path('response_new', {id: question.id}) }}" class="btn btn-warning">New answer</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
